<div class = "container">
<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Subtitle</th>
    <th>Description</th>
  </tr>
 
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= product.subtitle %></td>
      <td><%= product.description %></td>
      <td><%= link_to 'Show', product_path(product) %></td>
    </tr>
  <% end %>
</table>

</div>